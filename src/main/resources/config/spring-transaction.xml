<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/tx
		http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">
    
    
    
 	<!-- 注解型声明式事务配置 -->
	<bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />		  
	</bean>
	
	<bean id="transactionManagerXdcms" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory" ref="xdcmsSessionFactory" />		  
	</bean>  
	 
	
	<!-- 使用PROPAGATION_REQUIRES_NEW传播特性的编程	式事务模板 -->
	<bean id="txTemplateRequiresNew" class="org.springframework.transaction.support.TransactionTemplate">
		<property name="transactionManager" ref="transactionManager" />
		<property name="propagationBehaviorName" value="PROPAGATION_REQUIRES_NEW" />
		<property name="isolationLevelName" value="ISOLATION_READ_COMMITTED" />
	</bean>	
	<tx:annotation-driven transaction-manager="transactionManager" proxy-target-class="true" />

</beans>
